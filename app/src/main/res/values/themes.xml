<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UPay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_1</item>
        <item name="colorPrimaryVariant">@color/orange_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.UPay.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.UPay</item>
    </style>

    <style name="UpayButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">4dp</item>
        <item name="elevationOverlayColor">@color/orange_2</item>
        <item name="colorButtonNormal">@color/orange_1</item>
        <item name="elevationOverlayAccentColor">@color/orange_1</item>
        <item name="rippleColor">@color/orange_2</item>
        <item name="backgroundTint">@color/orange_1</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/orange_1</item>
    </style>

    <style name="OnBoardingTextStyle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SocialMediaLoginStyle" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/yellow2</item>
        <item name="boxStrokeColor">@color/orange_1</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="colorControlNormal">@color/yellow2</item>
        <item name="backgroundColor">@color/yellow2</item>
        <item name="backgroundTint">@color/yellow2</item>
    </style>

    <style name="KeyboardInputTextStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">34sp</item>
        <item name="cornerRadius">24dp</item>
        <item name="rippleColor">@color/orange_1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>