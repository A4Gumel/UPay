<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="4">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/transactionImage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/undraw_my_password"
            app:civ_border_color="@android:color/background_dark" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transactionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Musa Mamman" />

            <TextView
                android:id="@+id/transactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/urbanist_regular"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="Dec, 24, 2021 | 11:36: AM" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/transactionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:ellipsize="end"
                android:fontFamily="@font/urbanist_bold"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/orange_1"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="$ 400" />

            <TextView
                android:id="@+id/transactionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/urbanist_regular"
                android:maxLines="1"
                android:layout_gravity="end"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:maxLength="10"
                android:drawablePadding="4dp"
                android:textStyle="normal"
                tools:text="Income"
                app:drawableStartCompat="@drawable/ic_email"
                app:drawableTint="@color/orange_1" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>