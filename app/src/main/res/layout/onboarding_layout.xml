<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:backgroundTint="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/onBoardingImage"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_margin="@dimen/default_margin"
        tools:src="@drawable/undraw_transfer_money"
        android:contentDescription="@string/on_boarding_image" />

    <TextView
        android:id="@+id/onBoardingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        tools:text="The best app for finance, banking and e-wallet today"
        style="@style/OnBoardingTextStyle"/>

</LinearLayout>