<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:elevation="4dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:src="@drawable/undraw_my_password"
                app:civ_border_color="@android:color/background_dark"
                app:civ_border_width="1dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:alpha="0.2"
                android:background="@color/orange_1" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:id="@+id/amountWithCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:padding="4dp"
                        android:text="@string/amount"
                        android:textColor="@color/textColor" />

                    <TextView
                        android:id="@+id/amountTv"
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:gravity="end"
                        android:padding="4dp"
                        android:text="@string/amount"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:padding="4dp"
                        android:text="@string/name"
                        android:textColor="@color/textColor" />

                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:gravity="end"
                        android:padding="4dp"
                        android:text="@string/amount"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:padding="4dp"
                        android:text="@string/bank_account"
                        android:textColor="@color/textColor" />

                    <TextView
                        android:id="@+id/bankAccountTv"
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:gravity="end"
                        android:padding="4dp"
                        android:text="@string/amount"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:padding="4dp"
                        android:text="@string/schedule"
                        android:textColor="@color/textColor" />

                    <TextView
                        android:id="@+id/scheduleTv"
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:gravity="end"
                        android:padding="4dp"
                        android:text="@string/amount"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:padding="4dp"
                        android:text="@string/hours"
                        android:textColor="@color/textColor" />

                    <TextView
                        android:id="@+id/hoursTv"
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:gravity="end"
                        android:padding="4dp"
                        android:text="@string/amount"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:padding="4dp"
                        android:text="@string/category"
                        android:textColor="@color/textColor" />

                    <TextView
                        android:id="@+id/categoryTv"
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:gravity="end"
                        android:padding="4dp"
                        android:text="@string/amount"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:padding="4dp"
                        android:text="@string/notes"
                        android:textColor="@color/textColor" />

                    <TextView
                        android:id="@+id/notesTv"
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_medium"
                        android:gravity="end"
                        android:padding="4dp"
                        android:text="@string/amount"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />
                </TableRow>


            </TableLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/changeButton"
            style="@style/UpayButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:backgroundTint="@color/orange_2"
            android:text="@string/change" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextBtn"
            style="@style/UpayButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:text="@string/continue_str" />

    </LinearLayout>

</LinearLayout>